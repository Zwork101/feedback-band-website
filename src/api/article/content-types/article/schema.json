{
  "kind": "collectionType",
  "collectionName": "news",
  "info": {
    "singularName": "article",
    "pluralName": "news",
    "displayName": "News"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "image": {
      "allowedTypes": [
        "images",
        "files"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    },
    "summary": {
      "type": "string",
      "required": true,
      "minLength": 8,
      "default": "8"
    },
    "timestamp": {
      "type": "datetime"
    }
  }
}
